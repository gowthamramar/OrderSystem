<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<androidx.core.widget.NestedScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
	<LinearLayout
		android:layout_marginTop="@dimen/_20sdp"
		android:paddingRight="@dimen/_30sdp"
		android:paddingLeft="@dimen/_30sdp"
		android:layout_gravity="center"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<LinearLayout
			android:layout_weight=".8"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<ImageView
				android:scaleType="centerInside"
				android:src="@drawable/email"
				android:layout_width="@dimen/_30sdp"
				android:layout_height="@dimen/_30sdp" />
		</LinearLayout>
		<com.techware.clickkart.widgets.CustomEditText
			android:id="@+id/txtLogEmail"
			android:paddingRight="@dimen/_30sdp"
			android:layout_marginTop="@dimen/_3sdp"
			android:background="@color/transparent"
			android:gravity="center"
			android:layout_weight=".2"
			android:singleLine="true"
			android:maxLines="1"
			android:textAppearance="@style/TextAppearance.AppCompat.Large"
			android:textColor="#7344bad4"
			android:hint="@string/email_address"
			android:textColorHint="#7344bad4"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />
	</LinearLayout>
	<View
		android:layout_marginLeft="@dimen/_30sdp"
		android:layout_marginRight="@dimen/_30sdp"
		android:layout_marginTop="@dimen/_10sdp"
		android:background="@color/view_color"
		android:layout_width="match_parent"
		android:layout_height="1dp"/>

	<LinearLayout
		android:layout_marginTop="@dimen/_20sdp"
		android:paddingRight="@dimen/_30sdp"
		android:paddingLeft="@dimen/_30sdp"
		android:layout_gravity="center"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<LinearLayout
			android:layout_weight=".3"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<ImageView
				android:scaleType="centerInside"
				android:src="@drawable/password_icon"
				android:layout_width="@dimen/_30sdp"
				android:layout_height="@dimen/_30sdp" />
		</LinearLayout>
		<com.techware.clickkart.widgets.CustomEditText
			android:id="@+id/txtLogPassword"
			android:textColorHint="#7344bad4"
			android:layout_marginTop="@dimen/_3sdp"
			android:maxLines="1"
			android:singleLine="true"
			android:inputType="textPassword"
			android:background="@color/transparent"
			android:gravity="center"
			android:layout_weight=".1"
			android:textAppearance="@style/TextAppearance.AppCompat.Large"
			android:textColor="#7344bad4"
			android:hint="@string/password"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />
		<LinearLayout
			android:id="@+id/ll_show_password"
			android:gravity="center"
			android:layout_gravity="center"
			android:layout_weight=".3"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			
			<ImageView
				android:id="@+id/iv_showPassword"
				android:layout_width="wrap_content"
				android:layout_height="@dimen/_11sdp"
				android:scaleType="centerInside"
				android:src="@drawable/show_password_icon" />
		</LinearLayout>
	</LinearLayout>
	<View
		android:layout_marginLeft="@dimen/_30sdp"
		android:layout_marginRight="@dimen/_30sdp"
		android:layout_marginTop="@dimen/_10sdp"
		android:background="@color/view_color"
		android:layout_width="match_parent"
		android:layout_height="1dp"/>

	<com.techware.clickkart.widgets.CustomTextView
		android:id="@+id/login_btn"
		android:layout_marginTop="@dimen/_30sdp"
		android:layout_width="match_parent"
		android:layout_height="@dimen/_30sdp"
		android:layout_marginLeft="@dimen/_30sdp"
		android:layout_marginRight="@dimen/_30sdp"
		android:background="@drawable/button_gradient"
		android:gravity="center"
		android:text="@string/login_home"
		android:textStyle="bold"
		android:textAppearance="@style/TextAppearance.AppCompat.Small"
		android:textColor="@color/white" />
	<com.techware.clickkart.widgets.CustomTextView
		android:id="@+id/txtForgot"
		android:textColor="@color/forgot_password_color"
		android:layout_marginLeft="@dimen/_30sdp"
		android:layout_marginTop="@dimen/_30sdp"
		android:text="@string/forgot_password"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	<!--<LinearLayout
		android:layout_marginTop="@dimen/_20sdp"
		android:layout_marginLeft="@dimen/_30sdp"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<ImageView
			android:scaleType="centerInside"
			android:src="@drawable/fb_icon"
			android:layout_width="@dimen/_30sdp"
			android:layout_height="@dimen/_30sdp" />
		<ImageView
			android:layout_marginLeft="@dimen/_12sdp"
			android:scaleType="centerInside"
			android:src="@drawable/google_plus_icon"
			android:layout_width="@dimen/_30sdp"
			android:layout_height="@dimen/_30sdp" />
	</LinearLayout>-->
	</LinearLayout>
	</androidx.core.widget.NestedScrollView>
	
</LinearLayout>
