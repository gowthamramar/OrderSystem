<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<LinearLayout
		android:layout_marginTop="@dimen/_20sdp"
		android:paddingRight="@dimen/_30sdp"
		android:paddingLeft="@dimen/_30sdp"
		android:layout_gravity="center"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<LinearLayout
			android:layout_weight=".8"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<ImageView
				android:scaleType="centerInside"
				android:src="@drawable/location_icon"
				android:layout_width="@dimen/_30sdp"
				android:layout_height="@dimen/_30sdp" />
		</LinearLayout>
		<com.techware.clickkart.widgets.CustomEditText
			android:id="@+id/txt_zipCode"
			android:inputType="number"
			android:layout_marginTop="@dimen/_3sdp"
			android:background="@color/transparent"
			android:gravity="center"
			android:layout_weight=".2"
			android:textAppearance="@style/TextAppearance.AppCompat.Large"
			android:textColor="@color/zipcolor"
			android:textColorHint="@color/zipcolor"
			android:hint="@string/enter_zip_code"
			android:text=""
			android:maxLines="1"
			android:singleLine="true"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />
	</LinearLayout>
	<View
		android:layout_marginLeft="@dimen/_30sdp"
		android:layout_marginRight="@dimen/_30sdp"
		android:layout_marginTop="@dimen/_10sdp"
		android:background="@color/view_color"
		android:layout_width="match_parent"
		android:layout_height="1dp"/>
	<com.techware.clickkart.widgets.CustomTextView
		android:id="@+id/txtBtnFind"
		android:layout_marginTop="@dimen/_30sdp"
		android:layout_width="match_parent"
		android:layout_height="@dimen/_30sdp"
		android:layout_marginLeft="@dimen/_30sdp"
		android:layout_marginRight="@dimen/_30sdp"
		android:background="@drawable/button_gradient"
		android:gravity="center"
		android:text="@string/find"
		android:textStyle="bold"
		android:textAppearance="@style/TextAppearance.AppCompat.Small"
		android:textColor="@color/white" />

</LinearLayout>
