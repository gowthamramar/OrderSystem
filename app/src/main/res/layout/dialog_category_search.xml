<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white"
	android:orientation="vertical"
	xmlns:app="http://schemas.android.com/apk/res-auto"
>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/_40sdp"
		android:background="@color/homepage_toolbar_color">
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/_5sdp"
			android:gravity="center"
			android:orientation="horizontal">
			
			<LinearLayout
				android:id="@+id/ll_dialogBackCategories"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/_5sdp"
				android:layout_weight=".9">
				
				<ImageView
					android:layout_width="@dimen/_20sdp"
					android:layout_height="@dimen/_20sdp"
					android:scaleType="centerInside"
					android:src="@drawable/white_back_arrow" />
			</LinearLayout>
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="@dimen/_25sdp"
				android:layout_marginRight="@dimen/_25sdp"
				android:layout_weight=".1"
				android:background="@drawable/bg_white_rectangle"
				android:gravity="center">
				
				<com.techware.clickkart.widgets.CustomEditText
					android:id="@+id/dialog_txtCategorySearch"
					android:layout_width="match_parent"
					android:layout_height="@dimen/_20sdp"
					android:background="@color/transparent"
					android:ellipsize="end"
					android:hint="@string/search_categories"
					android:maxLines="1"
					android:paddingLeft="@dimen/_10sdp"
					android:textAppearance="@style/TextAppearance.AppCompat.Small"
					android:textColor="@color/search_grocery"
					android:textColorHint="@color/search_grocery" />
			</LinearLayout>
		
		
		</LinearLayout>
		
	
	</LinearLayout>
	<LinearLayout
		android:padding="@dimen/_40sdp"
		android:visibility="gone"
		android:gravity="center"
		android:id="@+id/llSearchCatDialog"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<ImageView
			android:id="@+id/iv_location"
			android:layout_gravity="center"
			app:srcCompat="@drawable/search_here"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
		<TextView
			android:textColor="#1e1e1e"
			android:textStyle="bold"
			android:textAppearance="@style/TextAppearance.AppCompat.Medium"
			android:layout_marginTop="@dimen/_15sdp"
			android:gravity="center"
			android:text="Oh Ohhh !"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>
		<TextView
			android:textColor="
#858585
"
			android:textStyle="bold"
			android:textAppearance="@style/TextAppearance.AppCompat.Small"
			
			android:gravity="center"
			android:text="@string/there_is_no_items_or_shops_like_your_searches"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>
		
	
	</LinearLayout>
	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/categoryRecyclerViewFragment"
		android:paddingBottom="@dimen/_10sdp"
		android:background="@color/white"
		android:layout_width="match_parent"
		android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>
	</LinearLayout>
