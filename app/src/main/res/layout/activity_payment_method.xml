<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".activity.PaymentMethodActivity">
	<LinearLayout
		android:id="@+id/ll_cart_toolbar"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<LinearLayout
			android:gravity="center"
			android:background="@color/homepage_toolbar_color"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="@dimen/_35sdp">
			
			<LinearLayout
				android:id="@+id/ll_paymentBackArrow"
				android:onClick="finsh"
				android:layout_weight=".6"
				android:layout_marginLeft="@dimen/_5sdp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				
				<ImageView
					android:layout_width="29dp"
					android:layout_height="@dimen/_20sdp"
					android:scaleType="centerInside"
					android:src="@drawable/white_back_arrow" />
			</LinearLayout>
			<com.techware.clickkart.widgets.CustomTextView
				android:paddingLeft="@dimen/_15sdp"
				android:textAppearance="@style/TextAppearance.AppCompat.Medium"
				android:layout_weight=".3"
				android:textColor="@color/white"
				android:text="@string/payment_method"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" />
			<com.techware.clickkart.widgets.CustomTextView
				android:textAppearance="@style/TextAppearance.AppCompat.Medium"
				android:layout_weight=".4"
				android:textStyle="bold"
				android:textColor="@color/white"
				android:text="@string/wallet_25_00"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" />
		</LinearLayout>
	</LinearLayout>
	<androidx.core.widget.NestedScrollView
		android:layout_marginTop="@dimen/_35sdp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<LinearLayout
			android:paddingLeft="@dimen/_10sdp"
			android:gravity="center"
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<LinearLayout
				android:id="@+id/ll_credit"
				android:layout_marginTop="@dimen/_20sdp"
				android:gravity="center|start"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<RadioButton
					android:id="@+id/rb_credit_debit"
					android:enabled="false"
					android:layout_weight=".5"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:buttonTint="@color/radio_btn_color"
					android:scaleX=".7"
					android:scaleY=".7" />
				<LinearLayout
					android:orientation="horizontal"
					android:layout_weight=".2"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
					<ImageView
						android:scaleType="fitCenter"
						android:src="@drawable/card_icon"
						android:layout_width="@dimen/_20sdp"
						android:layout_height="@dimen/_20sdp"/>
					
					<com.techware.clickkart.widgets.CustomTextView
						android:textAppearance="@style/TextAppearance.AppCompat.Medium"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:paddingLeft="@dimen/_5sdp"
						android:text="@string/credit_debit_card"
						android:textColor="@color/cabbage_color" />
				</LinearLayout>
				<ImageView
					android:layout_marginLeft="@dimen/_30sdp"
					android:id="@+id/iv_arrow_card"
					android:layout_weight=".4"
					android:scaleType="centerInside"
					android:src="@drawable/arrow_payment"
					android:layout_width="match_parent"
					android:layout_height="@dimen/_20sdp"/>
			</LinearLayout>
			<com.techware.clickkart.widgets.CustomTextView
				android:id="@+id/txt_select_your_card"
				android:visibility="gone"
				android:layout_marginTop="@dimen/_30sdp"
				android:textAppearance="@style/TextAppearance.AppCompat.Small"
				android:textColor="@color/cabbage_color"
				android:paddingLeft="@dimen/_35sdp"
				android:textStyle="bold"
				android:text="Select Your Card"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>
			<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/cardRecyclerview"
				android:visibility="gone"
				android:layout_marginTop="@dimen/_5sdp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
			<com.techware.clickkart.widgets.CustomTextView
				android:id="@+id/txt_Add_new_Card"
				android:visibility="gone"
				android:layout_marginTop="@dimen/_15sdp"
				android:paddingLeft="@dimen/_10sdp"
				android:paddingRight="@dimen/_10sdp"
				android:paddingTop="@dimen/_3sdp"
				android:paddingBottom="@dimen/_3sdp"
				android:background="@drawable/new_add_card_rounded"
				android:textColor="#43aee5"
				android:text="@string/add_new_card"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
			<LinearLayout
				android:id="@+id/ll_paypal"
				android:layout_marginTop="@dimen/_20sdp"
				android:gravity="center|start"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<RadioButton
					android:id="@+id/rb_paypal"
					android:enabled="false"
					android:layout_weight=".5"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:buttonTint="@color/radio_btn_color"
					android:scaleX=".7"
					android:scaleY=".7" />
				<LinearLayout
					android:orientation="horizontal"
					android:layout_weight=".2"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
					<ImageView
						android:src="@drawable/pay_pal_logo_830_x_553"
						android:layout_width="@dimen/_20sdp"
						android:layout_height="@dimen/_20sdp"/>
					<com.techware.clickkart.widgets.CustomTextView
						android:textAppearance="@style/TextAppearance.AppCompat.Medium"
						android:textColor="@color/cabbage_color"
						android:paddingLeft="@dimen/_5sdp"
						android:text="PayPal"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"/>
				</LinearLayout>
				
				<ImageView
					android:layout_weight=".4"
					android:scaleType="centerInside"
					android:layout_width="match_parent"
					android:layout_height="@dimen/_20sdp"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/ll_cash"
				android:layout_marginTop="@dimen/_15sdp"
				android:gravity="center|start"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<RadioButton
					android:id="@+id/rb_cash_on_delivery"
					android:layout_weight=".5"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:buttonTint="@color/radio_btn_color"
					android:scaleX=".7"
					android:scaleY=".7" />
				<LinearLayout
					android:orientation="horizontal"
					android:layout_weight=".2"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
					<ImageView
						android:scaleType="fitCenter"
						android:src="@drawable/cash_on_delivery"
						android:layout_width="@dimen/_20sdp"
						android:layout_height="@dimen/_20sdp"/>
					
					<com.techware.clickkart.widgets.CustomTextView
						android:layout_width="244dp"
						android:layout_height="wrap_content"
						android:paddingLeft="@dimen/_5sdp"
						android:text="@string/cash_on_delivery"
						android:textAppearance="@style/TextAppearance.AppCompat.Medium"
						android:textColor="@color/cabbage_color" />
				</LinearLayout>
				
				<ImageView
					android:layout_weight=".4"
					android:scaleType="centerInside"
					android:layout_width="match_parent"
					android:layout_height="@dimen/_20sdp"/>
			</LinearLayout>
		</LinearLayout>
	</androidx.core.widget.NestedScrollView>
	<LinearLayout
		android:id="@+id/ll_cart_bottom"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom"
		android:orientation="vertical"
		android:paddingTop="@dimen/_5sdp"
		android:paddingBottom="@dimen/_25sdp">
		<LinearLayout
			android:paddingBottom="@dimen/_10sdp"
			android:gravity="center"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<com.techware.clickkart.widgets.CustomTextView
				android:textAppearance="@style/TextAppearance.AppCompat.Small"
				android:textColor="@color/total_amount_color"
				android:text="@string/total_amount"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			<com.techware.clickkart.widgets.CustomTextView
				android:id="@+id/txt_paymentTotal"
				android:paddingLeft="@dimen/_3sdp"
				android:textAppearance="@style/TextAppearance.AppCompat.Small"
				android:textColor="@color/homepage_toolbar_color"
				android:text="257.00"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		</LinearLayout>
		<com.techware.clickkart.widgets.CustomTextView
			android:id="@+id/txt_pay_btn"
			android:layout_width="match_parent"
			android:layout_height="@dimen/_30sdp"
			android:layout_marginLeft="@dimen/_10sdp"
			android:layout_marginRight="@dimen/_10sdp"
			android:background="@drawable/button_gradient"
			android:gravity="center"
			android:text="@string/pay"
			android:textStyle="bold"
			android:textAppearance="@style/TextAppearance.AppCompat.Small"
			android:textColor="@color/white" />
	
	</LinearLayout>
</FrameLayout>