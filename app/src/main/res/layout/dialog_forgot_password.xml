<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_marginLeft="@dimen/_20sdp"
	android:layout_marginRight="@dimen/_20sdp"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	app:cardCornerRadius="@dimen/_10sdp"
	app:cardBackgroundColor="@color/white">
	<LinearLayout
		android:layout_gravity="bottom"
		android:gravity="bottom"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<com.techware.clickkart.widgets.CustomTextView
			android:layout_marginTop="@dimen/_20sdp"
			android:layout_gravity="center"
			android:text="@string/forgot_password_"
			android:textColor="@color/cabbage_color"
			android:textAppearance="@style/TextAppearance.AppCompat.Medium"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
		<LinearLayout
			android:layout_marginTop="@dimen/_15sdp"
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<LinearLayout
				android:layout_marginTop="@dimen/_20sdp"
				android:paddingRight="@dimen/_30sdp"
				android:paddingLeft="@dimen/_30sdp"
				android:layout_gravity="center"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<LinearLayout
					android:layout_weight=".3"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
					<ImageView
						android:scaleType="centerInside"
						android:src="@drawable/call_icon"
						android:layout_width="@dimen/_30sdp"
						android:layout_height="@dimen/_30sdp" />
				</LinearLayout>
				
				<com.techware.clickkart.widgets.CustomEditText
					android:id="@+id/txt_phone_forgot"
					android:inputType="number"
					android:layout_width="169dp"
					android:layout_height="wrap_content"
					android:layout_marginTop="@dimen/_3sdp"
					android:background="@color/transparent"
					android:hint="@string/phone_number"
					android:maxLines="1"
					android:singleLine="true"
					android:textAppearance="@style/TextAppearance.AppCompat.Medium"
					android:textColor="#7344bad4"
					android:textColorHint="#7344bad4" />
				
			</LinearLayout>
			<View
				android:layout_marginLeft="@dimen/_30sdp"
				android:layout_marginRight="@dimen/_30sdp"
				android:layout_marginTop="@dimen/_10sdp"
				android:background="@color/view_color"
				android:layout_width="match_parent"
				android:layout_height="1dp"/>
			<LinearLayout
				android:layout_marginTop="@dimen/_20sdp"
				android:paddingRight="@dimen/_30sdp"
				android:paddingLeft="@dimen/_30sdp"
				android:layout_gravity="center"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<LinearLayout
					android:layout_weight=".3"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
					<ImageView
						android:scaleType="centerInside"
						android:src="@drawable/password_icon"
						android:layout_width="@dimen/_30sdp"
						android:layout_height="@dimen/_30sdp" />
				</LinearLayout>
				<com.techware.clickkart.widgets.CustomEditText
					android:id="@+id/txt_forgot_password"
					android:textColorHint="#7344bad4"
					android:layout_marginTop="@dimen/_3sdp"
					android:maxLines="1"
					android:singleLine="true"
					android:background="@color/transparent"
					android:layout_weight=".1"
					android:textAppearance="@style/TextAppearance.AppCompat.Medium"
					android:textColor="#7344bad4"
					android:hint="@string/new_password_change"
					android:layout_width="match_parent"
					android:layout_height="wrap_content" />
			</LinearLayout>
			<View
				android:layout_marginLeft="@dimen/_30sdp"
				android:layout_marginRight="@dimen/_30sdp"
				android:layout_marginTop="@dimen/_10sdp"
				android:background="@color/view_color"
				android:layout_width="match_parent"
				android:layout_height="1dp"/>
		
	
		
	
		</LinearLayout>
		<com.techware.clickkart.widgets.CustomTextView
			android:id="@+id/txt_resetbtn"
			android:layout_marginTop="@dimen/_20sdp"
			android:textColor="@color/white"
			android:layout_marginLeft="@dimen/_30sdp"
			android:layout_marginRight="@dimen/_30sdp"
			android:background="@drawable/button_gradient"
			android:gravity="center"
			android:layout_marginBottom="@dimen/_20sdp"
			android:textAppearance="@style/TextAppearance.AppCompat.Medium"
			android:text="@string/reset_password"
			android:layout_width="match_parent"
			android:layout_height="@dimen/_25sdp"/>
	</LinearLayout>
</androidx.cardview.widget.CardView>
