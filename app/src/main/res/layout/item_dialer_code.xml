<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="center_vertical"
	android:minHeight="50dp"
	android:orientation="horizontal">
	
	<ImageView
		android:id="@+id/iv_item_dialer_code_select"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:padding="8dp"
		android:scaleType="centerInside"
		android:tint="@color/colorPrimaryDark"
		app:srcCompat="@drawable/ic_tick_select_language" />
	
	<com.techware.clickkart.widgets.CustomTextView
		android:id="@+id/txt_item_dialer_code_country_name"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:gravity="center_vertical|start"
		android:minHeight="40dp"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:text="@string/sample_name"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textColor="@color/text_4" />
	
	<com.techware.clickkart.widgets.CustomTextView
		android:id="@+id/txt_item_dialer_code_dialer_code"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center_vertical|start"
		android:minWidth="60dp"
		android:minHeight="40dp"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:text="@string/sample_dial_code"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textColor="@color/text_4" />

</LinearLayout>