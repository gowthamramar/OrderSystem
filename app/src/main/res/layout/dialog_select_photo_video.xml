<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="25dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center"
        android:minHeight="80dp"
        android:orientation="horizontal"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/ll_dialog_select_photo_video_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:gravity="center"
            android:minHeight="80dp"
            android:minWidth="80dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_photo_camera"/>

            <com.techware.clickkart.widgets.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="40dp"
                android:text="@string/btn_photo"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text_hint"/>

        </LinearLayout>

        <View
            android:visibility="gone"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/text_hint"/>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_dialog_select_photo_video_cam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:gravity="center"
            android:minHeight="80dp"
            android:minWidth="80dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_video_cam"/>

            <com.techware.clickkart.widgets.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="40dp"
                android:text="@string/btn_video"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text_hint"/>

        </LinearLayout>
        
    </LinearLayout>
    
</androidx.cardview.widget.CardView>