<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".activity.CartActivity">
<LinearLayout
	android:id="@+id/ll_cart_toolbar"
	android:onClick="finsh"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	app:layout_constraintStart_toStartOf="parent"
	app:layout_constraintTop_toTopOf="parent"
	app:layout_constraintBottom_toBottomOf="parent"
	app:layout_constraintVertical_bias="0">
	<LinearLayout
		android:gravity="center"
		android:background="@color/homepage_toolbar_color"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="@dimen/_35sdp">
		
		<LinearLayout
			android:id="@+id/ll_cartBackArrow"
			android:layout_weight=".6"
			android:layout_marginLeft="@dimen/_5sdp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			
			<ImageView
				android:layout_width="29dp"
				android:layout_height="@dimen/_20sdp"
				android:scaleType="centerInside"
				android:src="@drawable/white_back_arrow" />
		</LinearLayout>
		<com.techware.clickkart.widgets.CustomTextView
			android:paddingLeft="@dimen/_15sdp"
			android:textAppearance="@style/TextAppearance.AppCompat.Medium"
			android:layout_weight=".3"
			android:textColor="@color/white"
			android:text="@string/your_cart"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />
		<com.techware.clickkart.widgets.CustomTextView
			android:id="@+id/txt_cart_item_quantity"
			android:gravity="center"
			android:textAppearance="@style/TextAppearance.AppCompat.Medium"
			android:layout_weight=".4"
			android:textColor="@color/white"
			android:text="@string/count_items"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />
		</LinearLayout>
	</LinearLayout>
	<LinearLayout
		android:visibility="gone"
		android:id="@+id/ll_Nocart"
		android:gravity="center"
		android:orientation="vertical"
		app:layout_constraintTop_toBottomOf="@id/ll_cart_toolbar"
		app:layout_constraintBottom_toTopOf="@id/ll_cart_bottom"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
	<ImageView
		android:src="@drawable/cart_no_items"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>
	<com.techware.clickkart.widgets.CustomTextView
		android:textColor="@color/black"
		android:textStyle="bold"
		android:textAppearance="@style/TextAppearance.AppCompat.Medium"
		android:layout_marginTop="@dimen/_10sdp"
		android:text="No items in cart"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>
	</LinearLayout>
	
	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/cartRecyclerView"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:paddingBottom="@dimen/_20sdp"
		app:layout_constraintTop_toBottomOf="@id/ll_cart_toolbar"
		app:layout_constraintBottom_toTopOf="@id/ll_cart_bottom"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent" />
	<LinearLayout
		android:id="@+id/ll_cart_bottom"
		android:visibility="gone"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom"
		android:orientation="vertical"
		android:paddingTop="@dimen/_5sdp"
		android:paddingBottom="@dimen/_5sdp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintVertical_bias="1">
		<LinearLayout
			android:paddingBottom="@dimen/_10sdp"
			android:gravity="center"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<com.techware.clickkart.widgets.CustomTextView
				android:textAppearance="@style/TextAppearance.AppCompat.Small"
				android:textColor="@color/total_amount_color"
				android:text="@string/total_amount"
				android:textStyle="bold"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			<com.techware.clickkart.widgets.CustomTextView
				android:id="@+id/txtCartBulkAmount"
				android:paddingLeft="@dimen/_3sdp"
				android:textAppearance="@style/TextAppearance.AppCompat.Small"
				android:textColor="@color/homepage_toolbar_color"
				android:text="257.00"
				android:textStyle="bold"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		</LinearLayout>
		<LinearLayout
			android:paddingBottom="@dimen/_20sdp"
			android:layout_marginLeft="@dimen/_15sdp"
			android:layout_marginRight="@dimen/_15sdp"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<com.techware.clickkart.widgets.CustomTextView
				android:id="@+id/btn_cart_keepShopping"
				android:gravity="center"
				android:layout_marginRight="@dimen/_10sdp"
				android:textStyle="bold"
				android:textColor="@color/keepshoping"
				android:textAppearance="@style/TextAppearance.AppCompat.Small"
				android:layout_weight=".5"
				android:background="@drawable/clickkart_color_rounded"
				android:text="@string/keep_shoping"
				android:layout_width="match_parent"
				android:layout_height="@dimen/_30sdp" />
			<com.techware.clickkart.widgets.CustomTextView
				android:id="@+id/btn_cart_checkout"
				android:gravity="center"
				android:textColor="@color/white"
				android:textAppearance="@style/TextAppearance.AppCompat.Small"
				android:layout_weight=".5"
				android:layout_marginLeft="@dimen/_10sdp"
				android:background="@drawable/button_gradient"
				android:text="@string/checkout"
				android:textStyle="bold"
				android:layout_width="match_parent"
				android:layout_height="@dimen/_30sdp" />
		</LinearLayout>
		
	</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>