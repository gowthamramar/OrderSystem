<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/ll_peoples_favourite_store"
	android:orientation="vertical"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_marginLeft="@dimen/_5sdp">
<ImageView
	android:id="@+id/favourite_store_imgview"
	android:src="@drawable/favourite_pic"
	android:layout_width="@dimen/_200sdp"
	android:layout_height="@dimen/_100sdp" />
	<com.techware.clickkart.widgets.CustomTextView
		android:id="@+id/txt_favourite_store_name"
		android:paddingLeft="@dimen/_5sdp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:ellipsize="end"
		android:textAppearance="@style/TextAppearance.AppCompat.Small"
		android:text="@string/general_store"
		android:textStyle="bold"
		android:textColor="@color/general_store_color"
		android:maxLines="1"/>
	<com.techware.clickkart.widgets.CustomTextView
		android:id="@+id/txt_favourite_store_category"
		android:paddingLeft="@dimen/_5sdp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:ellipsize="end"
		android:textAppearance="@style/TextAppearance.AppCompat.Small"
		android:text="@string/general_store_vegetable_fruits_amp_sweets"
		android:textColor="@color/general_store_color"
		android:maxLines="1"/>
</LinearLayout>
